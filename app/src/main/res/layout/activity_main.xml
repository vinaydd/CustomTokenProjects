<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#dfd5d5"
    tools:context="com.singh.vinay.customtokenprojects.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginRight="20dp"
        android:minHeight="65dp"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/input_value"
            android:layout_width="match_parent"
            android:background="#fff"
            android:gravity="center"
            android:textSize="14sp"
            android:hint="input name for token"
            android:layout_height="45dp" />

        <Button
            android:id="@+id/Create_token"
            android:layout_width="match_parent"
            android:text="Create Token"
            android:gravity="center"
            android:textSize="26sp"
            android:layout_marginTop="20dp"
            android:background="#fff"
            android:layout_height="40dp" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_weight="1"
        android:layout_marginRight="20dp"
        android:minHeight="65dp"
        android:layout_marginTop="20dp"
        android:background="#fff">

        <com.plumillonforge.android.chipview.ChipView
            android:id="@+id/participant_chip_chat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_weight="1"
        android:layout_marginRight="20dp"
        android:minHeight="65dp"
        android:layout_marginTop="20dp"
      >
        <AutoCompleteTextView
            android:id="@+id/select_what"
            android:layout_width="match_parent"
            android:background="#fff"
            android:layout_height="45dp" />
    </LinearLayout>



</LinearLayout>
